<addon id="plugin.video.wl" name="MyWatchlist" version="1.0.0" provider-name="OHO">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.9.1"/>
    </requires>
    <!-- Hauptplugin -->
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video executable</provides>
    </extension>
    <extension point="xbmc.python.script" library="lib/script.py"/>
    <!-- Kontextmenü-Eintrag -->
    <extension point="kodi.context.item">
		<menu id="kodi.core.main">
		  <item library="context.py">
			<label>[COLOR goldenrod]Watchlist[/COLOR]</label>
			<visible>True</visible>
		  </item>
		</menu>
	</extension>
    <extension point="xbmc.addon.metadata">
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <summary lang="de_de">MyWatchlist</summary>
        <description>Füge Videos und Verzeichnisse aus beliebigen Addons zur Watchlist hinzu und verwalte sie.</description>
        <disclaimer lang="de_de"></disclaimer>
        <platform>all</platform>
        <assets>
			<icon>resources/images/icon.png</icon>
			<fanart>resources/images/fanart.jpg</fanart>
		</assets>
    </extension>
</addon>